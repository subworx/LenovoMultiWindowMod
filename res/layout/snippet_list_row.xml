<?xml version="1.0" encoding="utf-8"?>
<!-- <LinearLayout -->
<de.testroid.xposed.lenovomultiwinmod.CheckableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/app_icon"
        android:duplicateParentState="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="2dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/appIconDesc"
    />

    <LinearLayout
        android:duplicateParentState="true"
        android:layout_width="550dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_gravity="start"
        android:layout_weight="1">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/hideable_text_color"
            android:duplicateParentState="true" />

        <TextView
            android:id="@+id/app_paackage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/hideable_text_color"
            android:duplicateParentState="true"
            android:text="@string/emptyField"/>
    </LinearLayout>
    
    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="96dip"
        android:layout_height="96dip"
        android:duplicateParentState="true"
        android:src="@drawable/ic_checkmark"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:contentDescription="@string/checkmarkText"
    />

<!-- </LinearLayout> -->
</de.testroid.xposed.lenovomultiwinmod.CheckableLinearLayout>